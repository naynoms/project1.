<div class="wrapper">
  <div class="inspiration">
    <h3><%= @poem.title %></h3>

    <p><%= @poem.content %></p>
    <p> - <%= @poem.user.name %></p>


    <div>
      <% if @current_user.present? %>
      <%= link_to "Add to Favourites", poem_favourites_path(:poem_id=>@poem.id, :user_id=>@current_user.id), :method=>"post" %>
      <% end %>
    </div>
  </div>  
</div>
